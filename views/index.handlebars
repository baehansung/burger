<div class="container text-center">

    <h2>Bob's Burgers</h2>

    <div class="form-group">
        <form action="/burgers" method="POST">
            <textarea class="form-control" rows="5" id="comment" style="width: 50%; position: relative; left: 25%"></textarea>
            <button type="button" class="btn btn-primary" style="margin-top: 1%">Submit</button>
        </form>
    </div>


    <div class="container">
    {{!-- Burgers that haven't been eaten yet --}}
        <div class="row">
            <div class="col-xs-6">
                <h4>Burgers that are waiting to be devoured</h4>
                <ul>
                    {{#each burgers}}
                        {{#unless this.devoured}}
                            <p>
                                {{this.id}}. {{this.burger_name}}
                                <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                                    <input type="hidden" name="devoured" value="1">
                                    <button type="submit">DEVOUR!</button>
                                </form>
                            </p>
                        {{/unless}}
                    {{/each}}
                </ul>
            </div>

        {{!-- Burgers that have been eaten --}}
            <div class="col-xs-6" style="margin-left: 10%">
                <h4>Devoured burgers</h4>
                <ul>
                {{#each burgers}}
                    {{#if this.devoured}}
                        <p>
                            {{this.id}}. {{this.burger_name}}
                        </p>
                    {{/if}}    
                {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>